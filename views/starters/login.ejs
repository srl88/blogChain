<% include ../partials/header %>
<div class="container">
    <div align="center" style="width:80%; margin: auto;">
      <h1>Log In</h1>
      <form align="center" style="width: 50%;" action="/login" method="post">
        <div class="row">
                <input style="width:100%;" id="userName" type="text" class="validate" name="username" required>
                <label for="userName">Username</label>
        </div>
        <div class="row">
                <input style="width:100%;" id="password" type="password" class="validate" name="password" required>
                <label for="password">Password</label>
        </div>
        <button class="btn waves-effect waves-light" type="submit" name="action">
            Login <i class="material-icons right">send</i>
        </button>
      </form>
    </div>
</div>
<% include ../partials/footer %>
